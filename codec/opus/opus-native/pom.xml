    <groupId>org.restcomm.media.core.codec.opus</groupId>
    <artifactId>media-core-codec-opus-native</artifactId>
    <name>media-core-codec-opus-native</name>

    <profiles>
        <profile>
            <id>linux-profile</id>
            <activation>
                <os>
                    <name>Linux</name>
                    <family>unix</family>
                </os>
            </activation>
            <modules>
                <module>linux</module>
            </modules>
